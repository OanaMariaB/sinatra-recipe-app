<h3>Edit Page for Recipe Entry</h3>

<form action="/recipe_entries/<%= @recipe_entry.id %>" method="post">
<input type="hidden" name="_method" value="patch">
<label for="title">Title: </label>
    <input type="text" name="title" value="<%= @recipe_entry.title %>"> <br>
<label for="ingredients">Ingredients: </label>   
    <input type="text" name="ingredients" value="<%= @recipe_entry.ingredients %>"><br>
<label for="content">Content: </label>
    <input type="text" name="content" value="<%= @recipe_entry.content %>"><br>
    <input type="submit" value="Create Recipe" >
</form>